<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.supplier.SupplierFormController">
    <children>
        <VBox spacing="10" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
            <Label style="-fx-font-size: 20; -fx-font-weight: bold;" text="Supplier Management" />
            <TableView fx:id="supplierTable">
                <columns>
                    <TableColumn fx:id="colId" text="ID" />
                    <TableColumn fx:id="colName" text="Name" />
                    <TableColumn fx:id="colCompany" text="Company" />
                    <TableColumn fx:id="colemail" text="Email" />
                </columns>
            </TableView>
            <HBox spacing="10">
                <JFXButton onAction="#btnAddOnAction" text="Add" />
                <JFXButton onAction="#btnUpdateOnAction" text="Edit" />
                <JFXButton fx:id="deleteButton" onAction="#btnDelete" text="Delete" />
                <JFXButton fx:id="refreshButton" onAction="#btnReloadOnAction" text="Refresh" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
